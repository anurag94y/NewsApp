<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bookmark_card_view"
    >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp">

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/article_icon"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/article_title"
                    android:layout_toRightOf="@+id/article_icon"
                    android:layout_alignParentTop="true"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16dp" android:layout_marginLeft="5dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/artcile_date"
                    android:layout_toRightOf="@+id/article_icon"
                    android:layout_below="@+id/article_title"
                    android:textColor="#737377"
                    android:textSize="10dp" android:layout_marginLeft="5dp" android:layout_marginTop="5dp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>